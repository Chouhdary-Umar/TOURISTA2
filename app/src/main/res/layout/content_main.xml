<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rehan.tourista.MainActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.rehan.tourista.MapsActivity" />





    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Update Conditions"
        android:background="@drawable/custom_background_green"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/end_tour_btn_main_activity_xml"
        android:id="@+id/update_condition_btn_main_activity_xml" />

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="End Tour"
        android:background="@drawable/custom_background_red"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/end_tour_btn_main_activity_xml" />

</RelativeLayout>
